.narrative {
    position: static;
    width: 60%;
    min-height: min-content;
    display: block;
    font-size: calc(8px + 0.5vw);
    
    padding-left: 15px;
    padding-right: 15px;
    margin-left: 1%;
    margin-right: auto;
    margin-bottom: 5%;
    border-width: 1px;
    outline: none;
    border-color: #cccccc;
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif; 
}

textarea{
    resize:none;
}

#create_new_app_form
{
    text-align: center;
}

hr
{
    border-color:#cccccc;  
    opacity: 0.3; 
}

/*adds a line at the bottom of the page to separate the buttons from the content*/
hr.cover_page_foot{
    border-color:#cccccc;  
    opacity: 0.3;
    margin-top: 315px;
}

/*header buttons are generally used for collapsible content*/
.headerButton
{
    border: hidden;
    background-color: transparent;
}
.collapsibleContent
{
    display: none;
}


/*a general style that can be used to make textboxes similar*/
.generalTextboxStyle, .generalDropdownStyle
{
    font-size: calc(8px + 0.75vw);
    padding-left: 5px;
    border-radius: 4px;
    outline-width: 0px;
    margin-bottom: 1%;
    min-width: 50%;
    white-space: normal;
}

.generalTextboxStyle:focus
{
    border: 2px solid maroon;
}

/* Style the dropdown options selector */
.generalDropdownStyle:focus
{
    border: 1px solid maroon;
}
/*Style that can be used for labels on data entry fields*/
.fieldLayout 
{
    white-space: pre-line;
    font-size: calc(8px + 0.5vw);
}
/*a general style for headers*/
.generalHeaderFont
{
    font-size: calc(15px + 1vw);
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;  
    text-indent:50px;
}

/* fonts for the title of the webpage */
.pageTitle
{
    font-size: 4.5vh; 
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif; 
    text-align: center;
    font-weight: bold;
}

/* Styles for Continue, Save, and Back Input Buttons */
input[value=Continue]
{
    background-color: #009933;
    text-align: center;
    color: white;
    padding: 11px 2vw;
    text-decoration: none;
    cursor: pointer;
    float:right;
    font-size: calc(10px + 0.75vw);
    transition-duration: 0.4s;

}

input[value=Continue]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}

input[value=Back]
{
    background-color: #999999;
    text-align: center;
    color: white;
    padding: 11px 2vw;
    text-decoration: none;
    cursor: pointer; 
    margin-bottom: 2%;
    float: inside;
    font-size: calc(10px + 0.75vw);
    transition-duration: 0.4s;
}

input[value=Back]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}

input[value=Save]
{
    background-color: maroon;
    text-align: center;
    color: white;
    padding: 8px 20px;
    text-decoration: none;
    cursor: pointer; 
    margin-top: 3%;
    margin-right: 3%;
    position:absolute;
    top:0;
    right:0;
    font-size: 17px;
    transition-duration: 0.4s;
}

input[value=Save]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}

input[value=Skip]
{
    background: none;
    border: none;
    color: black;
    text-decoration: underline;
    cursor: pointer;
    float: right;
    font-size: calc(10px + 0.75vw);
    position: absolute;
    bottom: 2vh;
    right: 15vw;
    transition-duration: 0.4s;
}

input[value=Export]
{
    background-color: goldenrod;
    text-align: center;
    color: white;
    padding: 11px 2vw;
    text-decoration: none;
    cursor: pointer; 
    float: right;
    font-size: calc(10px + 0.75vw);
    position: absolute;
    right: 46%;
    transition-duration: 0.4s;
}

input[value=Export]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}

input[value=Edit]
{
    background-color: maroon;
    border-radius: 4px;
    color: white;
    padding: 8px 20px;
    text-decoration: none;
    cursor: pointer;   
    font-size: 15px;
}

input[value=Edit]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}

input[value=Delete]
{
    background-color: maroon;
    border-radius: 4px;
    color: white;
    padding: 8px 20px;
    text-decoration: none;
    cursor: pointer;   
    font-size: 15px;
}

input[value=Delete]:hover 
{
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.09),0 17px 50px 0 rgba(0,0,0,0.19);
}


/* Table of Contents Styling */
#TableOfContents {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    font-size: 25px;
    margin-top: 50px;
}

#TableOfContents td, #customers th {
    border: 1px solid #ddd;
    padding: 8px;
}

#TableOfContents tr:nth-child(even){background-color: #f2f2f2;}

#TableOfContents tr:hover {background-color: #ddd;}

/*styling buttons in the table of contents page to look like hyperlinks*/
.linkButton { 
    background: none;
    border: none;
    color: maroon;
    cursor: pointer;   
    font-size: 25px;
    float:right;
    font-weight: bold;
}

