/* Smaller screens, height <450px, less padding smaller font size on
sidebar */
@media screen and (max-height: 450px) {
    .sidetabs {padding-top: 15px;}
    .sidetabs a {font-size: 18px;}
}

.paper {
    background:#ffffff;
    box-shadow: 0 5px 5px rgba(0,0,0,0.15);
    display: block;
    border-radius: 20px;
    position:absolute;
    left:calc(310px + 5%);
    right:5%;
    top:5%;
    bottom:5%;
    height:auto;
    padding: 1%;
    overflow: auto;
}

.paperTop {
    background: white;
    position: fixed;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    left:calc(310px + 5%);
    right:5%;
    top:5%;
    padding:0 2% 0 2%;
    z-index: 2;
}

.paperContents {
    background: white;
    position:fixed;
    left:calc(310px + 5%);
    right:5%;
    top:15%;
    bottom:calc(5% + 85px);
    overflow:auto;
    padding:0 2% 0 2%;
}

.footerButtons {
    background: white;
    height: 85px;
    position:fixed;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    bottom: 5%;
    left:calc(310px + 5%);
    right:5%;
    padding: 0 2% 0 2%;
    justify-content: center;
    z-index: 2;
}

