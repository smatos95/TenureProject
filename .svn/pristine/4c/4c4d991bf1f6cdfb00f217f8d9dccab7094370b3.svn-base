/* Smaller screens, height <450px, less padding smaller font size on
sidebar */
@media screen and (max-height: 450px) {
    .sidetabs {padding-top: 15px;}
    .sidetabs a {font-size: 18px;}
}

.paper {
    background: #fff;
    box-shadow: 0 5px 5px rgba(0,0,0,0.15);
    display: block;
    border-radius: 15px;
    min-height: 500px;
    height: auto;
    min-width: 50%;
    width: auto;
    margin-left: calc(310px + 5%);
    margin-right: 5%;
    margin-top: 5%;
    margin-bottom: 5%;
    font-family: Arial, Helvetica, sans-serif;
    padding: 3% 3% 0 3%;
}

.narrative {
             position: static;
             width: 95%;
             min-height: min-content;
             display: block;
             font-size: calc(8px + 0.5vw);
             line-height: calc(12px + 0.5vw); 
             padding-left: 15px;
             padding-right: 15px;
             margin-left: auto;
             margin-right: auto;
             margin-bottom: 5%;
             border-width: 1px;
             outline: none;
             border-color: #cccccc;
}

textarea{
    resize:none;
}
#create_new_app_form
{
    text-align: center;
}

hr
{
    border-color:#cccccc;  
    opacity: 0.3; 
}

/*adds a line at the bottom of the page to separate the buttons from the content*/
hr.cover_page_foot{
    border-color:#cccccc;  
    opacity: 0.3;
    margin-top: 315px;
}

/*styling buttons in the table of contents page to look like hyperlinks*/
.linkButton { 
     background: none;
     border: none;
     color: #0066ff;
     text-decoration: underline;
     cursor: pointer;   
     font-size: 36px;
}

/*a general style that can be used to make textboxes similar*/
.generalTextboxStyle
{
    font-size: calc(18px + 1vw);
    padding-left: 5px;
    border-radius: 6px;
    outline-width: 0px;
    margin-bottom: 1%;
}
.generalTextboxStyle:focus
{
    border: 3px solid maroon;
}
/*Style that can be used for labels on data entry fields*/
.fieldLayout 
{
    white-space: pre-line;
    font-size: calc(10px + 1vw);
    margin: 1%;
}
/*a general style for headers*/
.generalHeaderFont
{
    font-size: calc(25px + 1vw);
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;         
}

/* fonts for the title of the webpage */
.pageTitle
{
    font-size: calc(40px + 1vw); 
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif; 
    text-align: center;
}

/* Styles for Continue, Save, and Back Input Buttons */
input[value=CONTINUE]
{
  background-color: #009933;
  border-radius: 6px;
  color: white;
  padding: 12px 30px;
  text-decoration: none;
  cursor: pointer;
  float:right;
}

input[value=BACK]
{
  background-color: #999999;
  border-radius: 6px;
  color: white;
  padding: 12px 30px;
  text-decoration: none;
  cursor: pointer; 
  margin-bottom: 2%;
  
  float: inside;
}

input[value=Save]
{
  background-color: maroon;
  border-radius: 6px;
  color: white;
  padding: 8px 20px;
  text-decoration: none;
  cursor: pointer; 
  margin-top: 5%;
  margin-right: 20%;
  position:absolute;
  top:0;
  right:0;
  font-size: 15px;
}

input[value=Skip]
{
  background: none;
  border: none;
  color: black;
  text-decoration: underline;
  cursor: pointer;
  float: right;
  font-size: 15px;
  margin-top: 1.5%;
  margin-right: 2%;
}

input[value=Print]
{
  background-color: #999999;
  border-radius: 6px;
  color: white;
  padding: 8px 20px;
  text-decoration: none;
  cursor: pointer; 
  margin-top: 5%;
  margin-right: 15%;
  position:absolute;
  top:0;
  right:0;
  font-size: 15px;
}

input[value=Edit]
{
    background-color: maroon;
    border-radius: 6px;
    color: white;
    padding: 8px 20px;
    text-decoration: none;
    cursor: pointer; 
    margin-top: 5%;
    margin-right: 20%;
    position:absolute;
    top:0;
    right:0;
    font-size: 15px;
}





