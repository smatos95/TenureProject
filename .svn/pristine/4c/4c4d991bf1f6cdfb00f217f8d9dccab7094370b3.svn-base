html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

/* Tab menu */
.sidetabs {
    float: left;
    border: 0px solid #ccc;
    background-color: maroon;
    width: 310px;
    height: 100%;
    position: fixed;
    z-index: 1; /* Stay on top */
    top: 0; /* Stay at the top */
    left: 0;
    padding-top:0%;
    overflow-x:hidden;
    
}

/* Tabs */
.tabbuttons, .dropdown-btn, .inDropdown{
    display: block;
    background-color: inherit;
    color: white;
    padding: 20px 16px;
    width: 100%;
    border: none;
    outline: none;
    text-align: left;
    cursor: pointer;
    transition: 0.3s;
    font-size: 18px;
    position: static;
    font-family: Arial, Helvetica, sans-serif;
}

/* Styles the button to submit transcript files*/
 #transcript-submit-button
 {
    padding: 10px;
    margin-top: 25px;
    color: white;
    background-color: maroon;
    border: 1px solid black;
    border-radius: 6px;
    cursor: pointer;
    font-size: 20px;
}
#transcript-submit-button:hover
{
    color: black;
    background-color: #ffcc33;
}

/* Style the button to upload transcript files*/
 #transcript-upload-button
 {
    padding: 10px;
    margin-top: 25px;
    color: white;
    background-color: maroon;
    border: 1px solid black;
    border-radius: 15px;
    cursor: pointer;
    font-size: 20px;
}
#transcript-upload-button:hover
{
    color: black;
    background-color: #ffcc33;
}
/*the text that shows the selected files*/
#transcript-file-text
{
    margin-left: 10px;
    font-family: Arial, Helvetica, sans-serif;
    color: gray;
}
.inDropdown
{
    text-align: right;
    font-size: 15px;
    font-family: Arial, Helvetica, sans-serif;
}
.dropdown-container {
  display: none;
  background-color: #650007;
  padding-left: 0px;
}

/* Optional: Style the caret down icon */
.fa-caret-down {
  float: right;
  padding-right: 8px;
}

.tabbuttons:hover, .dropdown-btn:hover, .inDropdown:hover{
    background-color: #cccccc;
}

.tabbuttons.active, .inDropdown.active, .dropdown-btn.active {
    background-color: #ffcc33;
    color: black;
}

