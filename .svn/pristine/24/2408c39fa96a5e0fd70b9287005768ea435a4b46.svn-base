<%@page import="common.Application"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@page import="common.BuUser"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Tenure Prep Form</title>
        <link rel ="icon" href="../images/husky.png">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="styles/controlPage.css" type="text/css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script type="text/javascript">          
            
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>
    </head>
   
    <body bgcolor="#F4ECD9">
         <% HttpSession session1 = request.getSession(true);
                    common.BuUser use = (common.BuUser) session1.getAttribute("user");
                    %>
        <jsp:include page="sideTabs.jsp"/>
        <script>
            document.getElementsByName("dropbutton")[3].className = "dropdown-btn active";
            document.getElementsByName("committeeService")[0].className = "inDropdown active";
            
            //keeps the dropdown open when element is clicked
            window.onload = function(){
                document.getElementById("universityCommunityDropdown").click();
            };
        </script>
        <div id="committeeService" class="tabcontent">
            <div class="paper">
                <div class="pageTitle">Committee Service</div>
                <center><div>
                        <div class ="current_apps_subtitle">Current Application:</div> 
                        <div class ="current_apps_displayBox">
                            <% if (request.getSession().getAttribute("currentapp") == null) {%>
                            No Application Selected
                            <%} else {
                                Application current = (Application) request.getSession().getAttribute("currentapp");
                            %>
                            <%=current.getFriendlyName()%>
                            <%}%>
                        </div>
                        </div></center>
                <div class="fieldLayout">Name of Committee
                    <input id="committeeName" type="text" class="generalTextboxStyle" name="committeeName">
                </div>
                <div class="fieldLayout">Type of Committee
                    <!--MIGHT NEED TO REPLACE WITH SELECTION-->
                    <input id="committeeType" type="text" class="generalTextboxStyle" name="committeeType">
                </div>
                <div class="fieldLayout" class="generalTextboxStyle">Membership
                    <select>
                        <option>N/A</option>
                        <option>elected</option>
                        <option>appointed</option>
                        <option>volunteered</option>
                    </select>
                </div>
                <div class="fieldLayout" class="generalTextboxStyle">Offices held
                    <input type="text" id="office" class="generalTextboxStyle" name="office">
                </div>
                <div class="generalHeaderFont">Dates of membership</div>
                <div class="fieldLayout">From:
                    <input type="date" id="memberFrom" class="generalTextboxStyle" name="memberFrom">
                </div>
                <div class="fieldLayout">To:
                    <input type="date" id="memberTo" class="generalTextboxStyle" name="memberTo">
                </div>
                <div class="fieldLayout">Extent of personal contributions
                    <textarea class="narrative" cols="500" rows="8" maxlength="1000">
                       
                    </textarea>
                </div>
                <div class="fieldLayout">Letter from chairperson of committee(s) in supporting documents
                    <input type="file" id="transcript-hidden-button" hidden="hidden"/>
                    <button type="button" id="transcript-upload-button">Select</button><span id="transcript-file-text">No file selected.</span>
                </div>
                
                <hr>
                
                <form id='redirct_page' action='RedirectServlet' method='POST'>
                        <!--back button-->
                        <input type="submit" name="uniCommNarrative" value="Back"/>
                    <input type="submit" name="studentOrgAdvisement" value="Continue"/>                        
                </form>
                <!--Skip Button-->
                <form id='redirct_page' action='RedirectServlet' method='POST'>                    
                        <input type="submit" name="studentOrgAdvisement" value="Skip"/>
                </form>                
            </div>
        </div> 
        <!-- Dropdown menu script -->
        <script>
            var dropdown = document.getElementsByClassName("dropdown-btn");
            var i;

            for (i = 0; i < dropdown.length; i++) {
                dropdown[i].addEventListener("click", function () {
                    
                    var dropdownContent = this.nextElementSibling;
                    if (dropdownContent.style.display === "block") {
                        dropdownContent.style.display = "none";
                    } else {
                        dropdownContent.style.display = "block";
                    }
                });
            }           
        </script>
    </body>
</html>
