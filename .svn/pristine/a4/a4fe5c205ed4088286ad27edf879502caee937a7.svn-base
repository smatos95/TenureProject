    margin-bottom:5%;
    padding: 0px 30px;
    font-family: Arial, Helvetica, sans-serif;
    display: flex;
    height: auto;
    width: auto;
}

.tabcontent div {
    padding: 10px;
    padding-left: 40px;
}

/* Smaller screens, height <450px, less padding smaller font size on
sidebar */
@media screen and (max-height: 450px) {
    .sidetabs {padding-top: 15px;}
    .sidetabs a {font-size: 18px;}
}

.paper {
    background: #fff;
    box-shadow:
        0 5px 5px rgba(0,0,0,0.15);
    display: block;
    min-height: 500px;
    height: auto;
    border-radius: 10px;
    min-width: 80%;
    margin: auto;
    width: auto;
    
}

.center-display-apps-content
{
    margin: auto;
    width: 50%;
    padding: 10px;   
    padding-top: 15%;
    min-width:450px;
    position: absolute;
