/* Table of contents style tags */
#toc_container {
    background: #f9f9f9 none repeat scroll 0 0;
    border: 1px solid #aaa;
    display: table;
    font-size: 95%;
    margin-bottom: 1em;
    padding: 20px;
    width: 90%;
    list-style-type:none;
}


/*styling buttons in the table of contents page to look like hyperlinks*/
.linkButton { 
     background: none;
     border: none;
     color: #0066ff;
     text-decoration: underline;
     cursor: pointer;   
     font-size: 20px;
}

/*a general style that can be used to make textboxes similar*/
.generalTextboxStyle
{
    font-size: 28px;
    padding-left: 5px;
    border-radius: 6px;
    outline-width: 0px;
}
.generalTextboxStyle:focus
{
    border: 3px solid maroon;
}
/*Style that can be used for labels on data entry fields*/
.dataField 
{
    white-space: pre-line;
    font-size: 20px;
}
/*a general style for headers*/
.generalHeaderFont
{
    font-size: 36px;
    font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;         
}

/* fonts for the title of the webpage */
.pageTitle
{
