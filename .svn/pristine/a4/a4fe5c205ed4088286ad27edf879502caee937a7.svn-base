html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

/* Tab menu */
.sidetabs {
    float: left;
    border: 0px solid #ccc;
    background-color: maroon;
    width: 310px;
    height: 100%;
    position: fixed;
    z-index: 1; /* Stay on top */
    top: 0; /* Stay at the top */
    left: 0;
    padding-top:0%;
    overflow-x:hidden;
    
}

/* Tabs */
.tabbuttons, .dropdown-btn, .inDropdown{
    display: block;
    background-color: inherit;
    color: white;
    padding: 20px 16px;
    width: 100%;
    border: none;
    outline: none;
    text-align: left;
    cursor: pointer;
    transition: 0.3s;
    font-size: 18px;
    position: static;
    font-family: Arial, Helvetica, sans-serif;
}

