<!DOCTYPE html>
<!--
Main page of the Tenure Prep Form web app. Riley Hughes principle designer
-->
<html>
    <head>
        <title>Tenure Prep Form</title>
        <link rel ="icon" href="../images/husky.png">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="styles/initialPage.css" type="text/css"/>
        <script type="text/javascript">
            function openTab(e, tabName) {
                var i, tabcontent, tabbuttons;
                
                // Get elements with tabcontent class and hide them
                tabcontent = document.getElementsByClassName("tabcontent");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }
                
                // Get elements w/ tabbuttons class and remove active class
                tabbuttons = document.getElementsByClassName("tabbuttons");
                for (i = 0; i < tabbuttons.length; i++) {
                    tabbuttons[i].className = tabbuttons[i].className.replace(" active", "");
                }
                
                // Show current tab, add active class to its button
                document.getElementById(tabName).style.display = "block";
                e.currentTarget.className += " active";
            }
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>
    </head>
    <body bgcolor="#F4ECD9">
        <div class="sidetabs">
            <button class="tabbuttons" onclick="openTab(event, 'startup')" id="hometab">Home</button>
            <button class="tabbuttons" onclick="openTab(event, 'coverpage')">Cover Page</button>
            <button class="tabbuttons" onclick="openTab(event, 'firstpage')">First Page</button>
            <button class="tabbuttons" onclick="openTab(event, 'bgkinfo')">Background Information</button>
            
        </div>
        
        <div id="startup" class="tabcontent">
            <h2>Welcome to your Tenure Prep Form!</h2>
        </div>
        
        <div id="coverpage" class="tabcontent">
            <h2>Create your Cover Page</h2>
            
            <div>
                First Name: <input id="firstname" type="text"/>
            </div>
            <div>
                Last Name: <input id="lastname" type="text"/>
            </div>
            <div>
                Current Rank: <select name="rank">
                    <option>Select a Rank</option>
                    <option>Assistant Professor</option>
                    <option>Associate Professor</option>
                    <option>Instructor</option>
                </select>
            </div>
            <div>
                Name of Department: <select name="department">
                    <option>Select a Department</option>
                    <option>Digital Forensics</option>
                    <option>Computer Science</option>
                    <option>Mathematics</option>
                    <option>EGGS</option>
                </select>
            </div>
        </div>
        
        <div id="firstpage" class="tabcontent">
            <h2>Create the First [Non-Cover] Page of your Portfolio</h2>
            <div><h3>Personal Information</h3>
            <div>
                First Name: <input id="firstname" type="text"/>
            </div>
            <div>
                Last Name: <input id="lastname" type="text"/>
            </div>
            <div>
                Campus Phone Number: <input type="text" class="form-control" data-mask="(999) 999-9999"/>
            </div>
            <div>
                Name of Department: <select name="department">
                    <option>Select a Department</option>
                    <option>Digital Forensics</option>
                    <option>Computer Science</option>
                    <option>Mathematics</option>
                    <option>EGGS</option>
                </select>
            </div>
                <div>
                    Date of Appointment to BU: <input type="date"/>
                </div>
                <div>
                    Total Anticipated Amount of Years of Service at BU by End 
                    of Current Academic Year: <input id="buyears" type="text"/>
                </div>
                </div>
            <div><h3>Department Chair Information</h3>
                <div>
                First Name: <input id="firstname" type="text"/>
            </div>
            <div>
                Last Name: <input id="lastname" type="text"/>
            </div>
                <div>
                    Phone Number: <input type="text" class="form-control" data-mask="(999) 999-9999"/>
                </div>
            </div>
            <div><span style="font-weight:bold">Date of Application Submission:</span>
                <input type="date"></div>
            <h3 style="color:red;">MUST BE SUBMITTED BEFORE DECEMBER 31ST</h3>
        </div>
        
        <div id="bgkinfo" class="tabcontent">
            <h2>Enter your History of Education</h2>
            <div>
                <h3>Undergraduate</h3>
                <div>
                    Institution:
                    <select>
                        <option>Select your Institution</option>
                    </select>
                </div>
            <div>
                Degree Awarded:
                <select>
                    <option>N/A</option>
                </select>
            </div>
            <div>
                Credits Received: <input type="text" name="Credits"/>
            </div>
            <div>
                Major: 
                <select>
                    <option>Select Your Major</option>
                </select>
            </div>
            <div>Minor:
                <select>
                    <option>Select Your Minor</option>
                </select>
            </div>
            <div>
                Field of Study:
                <select>
                    <option>Select Your Field of Study</option>
                </select>
            </div>
            <div>
                Attended From:
                <input type="date"/>
            </div>
            <div>
                Attended To:
                <input type="date"/>
            </div>
            <div>
                Date of Degree Conferral: <input type="date"/>
            </div>
            </div>
        </div>
        
        <script type="text/javascript">
            // Get elements with tabcontent class and hide them
            var tabContOuter, j;
            
            tabContOuter = document.getElementsByClassName("tabcontent");
            for (j = 0; j < tabContOuter.length; j++) {
                tabContOuter[j].style.display = "none";
            }
            
            // Display home tab
            document.getElementById("hometab").click();
        </script>
    </body>
</html>
